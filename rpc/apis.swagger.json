          }
        ],
        "tags": [
          "Apis"
        ]
      }
    },
    "/sendRawTx": {
      "post": {
        "summary": "receive encoded tx",
        "operationId": "SendRawTx",
        "responses": {
          "200": {
            "description": "A successful response.",
            "schema": {
              "$ref": "#/definitions/rpcSendRawTxRes"
            }
