        "operationId": "GetTxByHash",
        "responses": {
          "200": {
            "description": "A successful response.",
            "schema": {
              "$ref": "#/definitions/rpctxRes"
            }
          }
        },
        "parameters": [
          {
            "name": "hash",
            "description": "transaction hash",
            "in": "path",
