    "/subscribe": {
      "post": {
        "summary": "subscribe an event",
        "operationId": "Subscribe",
        "responses": {
          "200": {
            "description": "A successful response.(streaming responses)",
            "schema": {
              "$ref": "#/definitions/rpcSubscribeRes"
            }
          }
        },
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/rpcSubscribeReq"
            }
          }
        ],
        "tags": [
          "Apis"
        ]
      }
    }
